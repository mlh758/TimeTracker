@using TimeTrack.Shared.ViewModels

<MudSelect T="Category" Label="@Label" SelectedValues="@SelectedValues" SelectedValuesChanged="@SelectedValuesChanged" Value="@Value" ValueChanged="ValueChanged" MultiSelection="@Multiple">
    @foreach (var category in Categories)
    {
        <MudSelectItem Value="@category" />
    }
</MudSelect>

@code {
    [Parameter]
    public ICollection<Category> Categories { get; set; }

    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public bool Multiple { get; set; }

    [Parameter]
    public EventCallback<Category> ValueChanged { get; set; }
    [Parameter]
    public EventCallback<IEnumerable<Category>> SelectedValuesChanged { get; set; }

    [Parameter]
    public Category? Value { get; set; }
    [Parameter]
    public IEnumerable<Category> SelectedValues { get; set; }

    public CategorySelect() {
        Categories = new List<Category>();
        Label = "";
        SelectedValues = new HashSet<Category>();
    }

}
